<!DOCTYPE html>
<html>

<head>
  <%- include('./partials/head') %>
</head>

<body>
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
        <a class="navbar-brand" href="#">
          <img alt="Brand" src="https://yt3.ggpht.com/-cHMg7kQlNLo/AAAAAAAAAAI/AAAAAAAAAAA/2VoLKNYYLKM/s100-c-k-no-mo-rj-c0xffffff/photo.jpg">
        </a>
      </div>
      <h1><a href="/">KILLBASE</a></h1>
      <a href="/assassins">Assassins | </a>
      <a href="/assassins/new">New Assassin | </a>
      <a href="/contracts">Contracts | </a>
      <a href="/contracts/new">New Contract</a>
    </div>
  </nav>



  <div class="container">
    <div class="row">
      <div class="col col-sm-12">
        <h1><center>UPDATE CONTRACT</center></h1>
        <% contract.forEach(function(contract) { %>
          <form class="updateForm">
            <div class="row">

              <div class="col col-sm-4">
                <div class="form-updateAss">
                  <label>Target Name</label>
                  <input name="target" value="<%= contract.target %>">
                </div>

                <div class="form-updateAss">
                  <label>Client Name</label>
                  <input name="client" value="<%= contract.client %>">
                </div>
              </div>

              <div class="col col-sm-4">
                <div class="form-updateAss">
                  <label>Budget</label>
                  <input name="budget" value=" <%= contract.budget %>">
                </div>

                <div class="form-updateAss">
                  <label>Location</label>
                  <input name="location" value="<%= contract.location%>">
                </div>

                <div class="form-updateAss">
                  <label>Security Level</label>
                  <input name="sec_level" value="<%= contract.sec_level%>">
                </div>

              </div>


              <div class="col col-sm-4">

                <button name="submit" class="btn btn-primary">Submit</button>
              </div>
            </div>
          </form>
          <% }); %>
      </div>
    </div>
  </div>
  </div>
  </div>
  <%- include('./partials/scripts') %>
</body>

</html>
