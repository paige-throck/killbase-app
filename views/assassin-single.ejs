<!DOCTYPE html>
<html>

<head>
  <%- include('./partials/head') %>

</head>

<body>

  <nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="#">
        <img alt="Brand" src="https://yt3.ggpht.com/-cHMg7kQlNLo/AAAAAAAAAAI/AAAAAAAAAAA/2VoLKNYYLKM/s100-c-k-no-mo-rj-c0xffffff/photo.jpg">
      </a>
    </div>
    <h1><a href="/">KILLBASE</a></h1>
      <a href="/assassins">Assassins | </a>
      <a href ="/assassins/new">New Assassin | </a>
      <a href="/contracts">Contracts | </a>
      <a href ="/contracts/new">New Contract</a>
  </div>
  </nav>


  <div class="container">
    <h1><center>ASSASSIN</center></h1>
    <div class="row">
      <div class="col col-sm-12">
        <ul>
          <% assassin.forEach(function(assassin) { %>
            <div class="ass row">
              <div class="col col-sm-4">
                <li><strong>Name:</strong>
                  <%= assassin.full_name %>
                </li>
                <li><strong>Code Name:</strong>
                  <%= assassin.code_name %>
                </li>
                <li><strong>Contact Info:</strong>
                  <%= assassin.contact_info %>
                </li>
                <li><strong>Weapon:</strong>
                  <%= assassin.weapon%>
                </li>
              </div>
              <div class="col col-sm-4">
                <li><strong>Age:</strong>
                  <%= assassin.age%>
                </li>
                <li><strong>Price:</strong>
                  <%= assassin.price%>
                </li>
                <li><strong>Rating:</strong>
                  <%= assassin.rating%>
                </li>
                <li><strong>Kills:</strong>
                  <%= assassin.kills%>
                </li>
              </div>
              <div class="col col-sm-4">

                <a href="/assassins/<%= assassin.ass_id%>/edit">
                <button type="button" class="btn btn-primary">Edit</button>
              </a>
                <button type="button" class="btn btn-primary">Delete</button>
              </div>
          </div>
            <% }); %>
        </ul>


    <h1><center>ACTIVE CONTRACTS</center></h1>
    <div class="row">
      <div class="col col-sm-12">
        <ul>
          <% assassin.forEach(function(active) { %>
            <div class="activeCon row">
              <div class="col col-sm-4">
                <li><strong>Target Name:</strong>
                  <%= active.target %>
                </li>
                <li><strong>Client Name:</strong>
                  <%= active.client %>
                </li>
              </div>
              <div class="col col-sm-4">
                <li><strong>Location:</strong>
                  <%= active.location%>
                </li>
                <li><strong>Security Level:</strong>
                  <%= active.sec_level%>
                </li>

              </div>
            </div>
            <% }); %>
        </ul>
      </div>
    </div>
  </div>


    <%- include('./partials/scripts') %>
</body>

</html>
